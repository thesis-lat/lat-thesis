extends ../base

block title
    title {{ repo }} / Thesis

block content
    h1 
        a(href="https://github.com/{{ repo }}" target="_blank")
            i.fa-brands.fa-github-alt
            span {{ repo }}

    h2 {{ patriae_nomen }}
    h3 
        i.fa-solid.fa-language 
        span {{ lingua }}
        i.fa-solid.fa-calendar 
        span {{ annus }}

    p 
        input#copy(type="text" value="curl -Ls {{ domain }}sh/{{ repo }} | sh -")
        button(onclick="onCopy()")
            i.fa-solid.fa-copy

    iframe(
        src="https://docs.google.com/viewer?url=https://github.com/{{ repo }}/releases/download/latest/doc.pdf&embedded=true"
        width="100%"
        height="480px"
    )

    p
        a(href="//{{ universitas }}" target="_blank")
            b Universitas
        span / 
        a(href="//{{ facultas }}" target="_blank") 
            b Facultas
        span / 
        a(href="//{{ repositorium }}" target="_blank") 
            b Repositorium 

    p {{ descriptio }}
    p
        small Visitor numerus: {{ verificatur }}

block body
    script.
        function onCopy() {
            navigator.clipboard.writeText(
                document.querySelector('#copy').value
            ).then(_=>this.style.color='var(--color-1)')
        }
